extends ../index
block title
  title Profile
block body
  a(href='/account/transfer', target='blank') View His of Transfers
  if err
    ul.list-group
      each e in err
        li.list-group-item
          .alert.alert-danger(role='alert') #{e}
  if account
    ul.list-group
      li.alert.alert-success ID: #{account.id}
      li.alert.alert-info Username: #{account.username}
      li.alert.alert-info Account type: #{account.type}
      li.alert.alert-warning Password (hashed): #{account.pw}

  form(action='/account/logout', method='POST')
    button Log out

  if transfers
    h3.zoom.alert.alert-danger(style="font-weight: bold;") Total Transferred: 
      span #{totalcost}
      each x in transfers
        h2(style="font-weight: bold;") Transfer id: #{x.id}
        ul
          li.list-group
            h2.alert-danger ID: #{x.id}
            h3.alert-dark User: #{x.name}
            p.alert-success Date:  #{x.date}
            p.alert-info Money: #{x.money}
        form(action='/cart/pay', method='POST')
          input(type='hidden', value=x.id, name='clearTransfer')
          button.btn.btn-danger Clear History
        br
        br